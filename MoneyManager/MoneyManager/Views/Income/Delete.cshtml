@model MoneyManager.Models.ViewModels.IncomeViewModel

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card shadow-lg" style="border-radius: 1rem;">
                    <div class="card-body p-5">
                        <form method="post" asp-action="Delete">
                            <input asp-for="@Model.Id" hidden />
                            <div class="p-3">
                                <div class="form-group row">
                                    <h2 class="text-primary">Видалити дохід</h2>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group row">
                                            <div class="col">
                                                <label asp-for="IncomeType"></label>
                                            </div>
                                            <div class="col">
                                                <label asp-for="Description"></label>
                                            </div>
                                            <div class="col">
                                                <label asp-for="Amount"></label>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col">
                                                <select asp-for="IncomeTypeId" asp-items="@Model.TypeDropDown" class="form-control" disabled>
                                                    <option selected>--Виберіть --</option>
                                                </select>
                                            </div>
                                            <div class="col">
                                                <input asp-for="Description" disabled class="form-control" />
                                            </div>
                                            <div class="col">
                                                <input asp-for="Amount" disabled class="form-control" />
                                            </div>
                                        </div>
                                        <div class="form-group col">
                                            <div class="row">
                                                <div class="col">
                                                    <input type="submit" class="btn btn-danger w-75" value="Видалити" />
                                                </div>
                                                <div class="col">
                                                    <a class="btn btn-success w-75" asp-action="Index">Скасувати</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
