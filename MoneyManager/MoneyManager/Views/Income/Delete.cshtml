@model MoneyManager.Models.ViewModels.IncomeViewModel

<form method="post" asp-action="Delete">
    <input asp-for="@Model.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Видалити дохід</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IncomeType"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <select asp-for="IncomeTypeId" asp-items="@Model.TypeDropDown" class="form-control" disabled>
                            <option selected>--Виберіть --</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <input asp-for="Description" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Amount" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8  offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Видалити" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Скасувати</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}