@model IEnumerable<MoneyManager.Models.ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список витрат</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary">Додати категорію витрат</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                    <th>
                        Опції
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expenseType in Model)
                {
                    <tr>
                        <td width="30%">@expenseType.Name</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-primary mx-1" asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@expenseType.Id">Оновити</a>
                                <a class="btn btn-danger mx-1" asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@expenseType.Id">Видалити</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Не знайдено ніяких витрат</p>
    }
</div>