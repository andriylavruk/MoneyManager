@model IEnumerable<MoneyManager.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список витрат</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Додати витрату</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Назва
                    </th>
                    <th>
                        Витрати(грн.)
                    </th>
                    <th>
                        Опис
                    </th>
                    <th>
                        Опції
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="10%">@expense.Id</td>
                        <td width="30%">@expense.Name</td>
                        <td width="20%">@expense.Amount</td>
                        <td width="40%">@expense.Description</td>
                        <td class="w-100 btn-group" role="group">
                            <a class="btn btn-primary mx-1" asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id">Оновити</a>
                            <a class="btn btn-danger mx-1" asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Не знайдено ніяких витрат</p>
    }
</div>