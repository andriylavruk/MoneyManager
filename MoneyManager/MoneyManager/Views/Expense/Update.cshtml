@model MoneyManager.Models.ViewModels.ExpenseViewModel

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Оновити витрату</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ExpenseType"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <select asp-for="ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control">
                            <option selected>--Виберіть --</option>
                        </select>
                        <span asp-validation-for="ExpenseTypeId" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8  offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Оновити" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-action="Index">Скасувати</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}